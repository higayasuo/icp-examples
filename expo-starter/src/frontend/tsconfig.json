{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "typeRoots": ["./node_modules/@types", "./node_modules/ic-vetkd-utils"],
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/+html.tsx"
  ],
  "exclude": ["node_modules"]
}
